<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ff1ba1ee"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jere.weatherman.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/cityname"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:text="Nairobi KE"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/thumbnailIcon"
        android:layout_below="@+id/cityname"
        android:background="#fff"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/degreetext"
        android:text="12 Deg"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/temptext"
        android:text="Temperature :"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:textColor="#fff"
        android:layout_below="@+id/thumbnailIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/windtext"
        android:text="Wind :"
        android:layout_marginTop="8sp"
        android:textColor="#fff"
        android:layout_below="@+id/temptext"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cloudtext"
        android:text="Cloud :"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:layout_below="@id/windtext"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pressuretetext"
        android:textColor="#fff"
        android:text="Pressure :"
        android:textSize="24sp"
        android:layout_marginTop="8sp"
        android:layout_below="@+id/cloudtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/humidtext"
        android:textColor="#fff"
        android:textSize="24sp"
        android:text="Humidity :"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/pressuretetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/risetext"
        android:textColor="#fff"
        android:text="Sunrise :"
        android:layout_below="@id/humidtext"
        android:textSize="24sp"
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/settext"
        android:textColor="#fff"
        android:textSize="24sp"
        android:text="Sunset :"
        android:layout_below="@+id/risetext"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/updatetext"
        android:textColor="#fff"
        android:text="Last Updated :"
        android:layout_below="@id/settext"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
